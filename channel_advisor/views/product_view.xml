<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_customer_sku_view" model="ir.ui.view">
            <field name="name">Product Template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <page name='general_information' position="inside">
                    <separator string="Customer Reference" />
                    <field name="product_customer_sku" invisible="1" />
                    <field name='customer_product_value_ids'>
                        <tree editable="bottom">
                            <field name="product_id" invisible="1" />
                            <field name="partner_id" />
                            <field name="name" />
                            <field name="customer_sku" />
                            <field name="agreed_price" />
                        </tree>
                    </field>
                </page>
                <notebook position="inside">
                    <page string="Channel Advisor">
                        <group>
                            <group>
                                <field name="ca_product_id" string="Product ID" readonly="1" />
                                <field name="ca_profile_id" string="Profile ID" readonly="1" />
                            </group>
                            <group invisible="1">
                                <field name="ca_product_type" readonly="1" />
                                <field name="ca_parent_product_id" invisible="1" />
                                <field name="ca_parent_id" string="Parent Product" readonly="1"
                                    attrs="{'invisible': [('ca_product_type', '!=', 'Child')]}" />
                            </group>
                            <group>
                                <field name="ca_brand" readonly="1" />
                                <field name="ca_mpn" readonly="1" />
                                <field name="is_kit" />
                            </group>
                        </group>
                        <group string="Components" attrs="{'invisible': [('is_kit', '=', False)]}">
                            <button name="action_update_components" type="object" string="Update Components"
                                attrs="{'invisible': [('ca_product_type', '!=', 'Bundle')]}" icon="fa-refresh"
                                class="oe_link float-right" colspan="4"></button>
                            <field name="ca_bundle_product_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id" required="1"
                                        domain="[('ca_product_type', 'in', ['Item', 'Child']), ('ca_profile_id', '=', parent.ca_profile_id)]" />
                                    <field name="quantity" required="1" />
                                </tree>
                            </field>
                        </group>
                        <group string="Bundles" attrs="{'invisible': [('is_kit', '=', True)]}">
                            <field name="ca_bundle_ids" nolabel="1"
                                context="{'default_product_id': product_variant_id}">
                                <tree editable="bottom">
                                    <field name="product_id" invisible="1" />
                                    <field name="bundle_id" required="1"
                                        domain="[('is_kit', '=', True), ('ca_profile_id', '=', parent.ca_profile_id)]" />
                                    <field name="quantity" required="1" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="channel_adv_product_template_search_view" model="ir.ui.view">
            <field name="name">Channel advisor Product Template Search View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="product_customer_sku" />
                </field>
            </field>
        </record>


        <!-- KIT ON HAND -->
        <record id="product_template_form_view_procurement_button_inherit_ca" model="ir.ui.view">
            <field name="name">product.template_procurement.inherit.channel.advisor</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button" />
            <field name="arch" type="xml">
                <xpath expr="//button//field[@name='qty_available']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_kit', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button//field[@name='qty_available']" position="after">
                    <field name="kit_available" widget="statinfo" nolabel="1" class="mr4"
                        attrs="{'invisible': [('is_kit', '=', False)]}" />
                </xpath>

                <!-- Qty Free -->
                <button name="action_product_tmpl_forecast_report" position="after">
                    <button name="action_product_tmpl_forecast_report" type="object"
                        attrs="{'invisible':[('type', '!=', 'product')]}" context="{'default_product_tmpl_id': id}"
                        class="oe_stat_button" icon="fa-cubes">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="free_qty" widget="statinfo" nolabel="1" class="mr4"
                                    attrs="{'invisible': [('is_kit', '=', True)]}" />
                                <field name="kit_free_qty" widget="statinfo" nolabel="1" class="mr4"
                                    attrs="{'invisible': [('is_kit', '=', False)]}" />
                                <field name="uom_name" />
                            </span>
                            <span class="o_stat_text">Available Qty.</span>
                        </div>
                    </button>
                </button>
            </field>
        </record>

        <record id="product_form_view_procurement_button_inherit_ca" model="ir.ui.view">
            <field name="name">product.product.procurement.inherit.channel.advisor</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button" />
            <field name="arch" type="xml">
                <xpath expr="//button//field[@name='qty_available']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_kit', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//button//field[@name='qty_available']" position="after">
                    <field name="kit_available" widget="statinfo" nolabel="1" class="mr4"
                        attrs="{'invisible': [('is_kit', '=', False)]}" />
                </xpath>

                <!-- Qty Free -->
                <button name="action_product_forecast_report" position="after">
                    <button name="action_product_forecast_report" type="object"
                        attrs="{'invisible':[('type', '!=', 'product')]}" context="{'default_product_tmpl_id': id}"
                        class="oe_stat_button" icon="fa-cubes">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="free_qty" widget="statinfo" nolabel="1" class="mr4"
                                    attrs="{'invisible': [('is_kit', '=', True)]}" />
                                <field name="kit_free_qty" widget="statinfo" nolabel="1" class="mr4"
                                    attrs="{'invisible': [('is_kit', '=', False)]}" />
                                <field name="uom_name" />
                            </span>
                            <span class="o_stat_text">Available Qty.</span>
                        </div>
                    </button>
                </button>
            </field>
        </record>


        <!-- KITS -->
        <record id="ca_product_bundle_view_tree" model="ir.ui.view">
            <field name="name">ca.product.bundle.tree</field>
            <field name="model">ca.product.bundle</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="bundle_id" />
                    <field name="product_id" />
                    <field name="quantity" />
                </tree>
            </field>
        </record>

        <record id="ca_product_bundle_view_form" model="ir.ui.view">
            <field name="name">ca.product.bundle.form</field>
            <field name="model">ca.product.bundle</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="bundle_id" required="1" domain="[('is_kit', '=', True)]" />
                            </group>
                            <group>
                                <field name="product_id" required="1"
                                    domain="[('ca_product_type', 'in', ['Item', 'Child'])]" />
                                <field name="quantity" required="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ca_product_bundle_view_search" model="ir.ui.view">
            <field name="name">ca.product.bundle.search</field>
            <field name="model">ca.product.bundle</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter string="Kit" name="bundle" domain="[]" context="{'group_by':'bundle_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="ca_product_bundle_action" model="ir.actions.act_window">
            <field name="name">Kits</field>
            <field name="res_model">ca.product.bundle</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="ca_product_bundle_view_tree" />
            <field name="search_view_id" ref="ca_product_bundle_view_search" />
            <field name="context">{'search_default_bundle': 1}</field>
        </record>

        <menuitem id="ca_product_bundle_menu" action="ca_product_bundle_action"
            parent="stock.menu_stock_inventory_control" sequence="50" />


        <record id="ca_update_quantity_action" model="ir.actions.server">
            <field name="name">ChannelAdvisor: Update Quantity</field>
            <field name="model_id" ref="product.model_product_template" />
            <field name="binding_model_id" ref="product.model_product_template" />
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">records.ca_update_quantity()</field>
        </record>

    </data>

</odoo>
