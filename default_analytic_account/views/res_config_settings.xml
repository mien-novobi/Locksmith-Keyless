<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_default_analytic_account" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.default.analytic.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deposit_default_product_id']/../../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="default_sale_analytic_account">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Default Analytic Account</span>
                        <div class="text-muted">
                            Select the default analytic account used for sales
                        </div>
                        <div class="text-muted">
                            <field name="sale_analytic_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
